9. Write a program in C to Construct an expression tree from the given
prefix expression, e.g., +--a*bc/def, traverse it using post-order
traversal.
#include <stdio.h>
#include <conio.h>
#include <stdlib.h>
#include <string.h>

struct Node {
    char data;
    struct Node *left, *right;
};

struct Node* createNode(char ch) {
    struct Node *newNode;
    newNode = (struct Node*)malloc(sizeof(struct Node));
    newNode->data = ch;
    newNode->left = newNode->right = NULL;
    return newNode;
}

struct Node* buildTree(char *prefix, int *index) {
    char ch = prefix[*index];
    (*index)++;
    if(ch == '\0') return NULL;

    struct Node *node = createNode(ch);

    if(ch == '+' || ch == '-' || ch == '*' || ch == '/' || ch == '^') {
        node->left = buildTree(prefix, index);
        node->right = buildTree(prefix, index);
    }
    return node;
}

void postOrder(struct Node *root) {
    if(root == NULL) return;
    postOrder(root->left);
    postOrder(root->right);
    printf("%c ", root->data);
}

void main() {
    char prefix[50] = "+--a*bc/def";
    int index = 0;
    struct Node *root;
    clrscr();

    root = buildTree(prefix, &index);
    printf("Postorder Traversal: ");
    postOrder(root);

    getch();
}
