Q7)Create a adjacency list using graph data structure
#include <stdio.h>
#include <conio.h>
#include <stdlib.h>

struct Node
{
    int vertex;
    struct Node *next;
};

struct Graph
{
    int numVertices;
    struct Node **adjList;
};

// Function to create a node
struct Node *createNode(int v)
{
    struct Node *newNode = (struct Node *)malloc(sizeof(struct Node));
    newNode->vertex = v;
    newNode->next = NULL;
    return newNode;
}

// Function to create a graph
struct Graph *createGraph(int vertices)
{
    int i;
    struct Graph *graph = (struct Graph *)malloc(sizeof(struct Graph));
    graph->numVertices = vertices;

    graph->adjList = (struct Node **)malloc(vertices * sizeof(struct Node *));
    for (i = 0; i < vertices; i++)
        graph->adjList[i] = NULL;

    return graph;
}

// Function to add edge (Undirected Graph)
void addEdge(struct Graph *graph, int src, int dest)
{
    struct Node *newNode = createNode(dest);
    newNode->next = graph->adjList[src];
    graph->adjList[src] = newNode;

    // Since undirected, add edge from dest to src also
    newNode = createNode(src);
    newNode->next = graph->adjList[dest];
    graph->adjList[dest] = newNode;
}

// Function to display adjacency list
void printGraph(struct Graph *graph)
{
    int v;
    struct Node *temp;

    printf("\n--- Adjacency List of Graph ---\n");
    for (v = 0; v < graph->numVertices; v++)
    {
        temp = graph->adjList[v];
        printf("Vertex %d: ", v);
        while (temp)
        {
            printf("%d -> ", temp->vertex);
            temp = temp->next;
        }
        printf("NULL\n");
    }
}

void main()
{
    int vertices, edges, i, src, dest;
    struct Graph *graph;

    clrscr();  // Clear screen (Turbo C specific)

    printf("Enter number of vertices: ");
    scanf("%d", &vertices);

    graph = createGraph(vertices);

    printf("Enter number of edges: ");
    scanf("%d", &edges);

    for (i = 0; i < edges; i++)
    {
        printf("\nEnter edge %d (source destination): ", i + 1);
        scanf("%d %d", &src, &dest);
        addEdge(graph, src, dest);
    }

    printGraph(graph);

    getch();  // Wait for keypress before exit
}
